{ 
    "compilerOptions": { 
        "target": "es2017", 
        "module": "commonjs", 
        "lib": ["es2017"], 
        "declaration": true, 
        "sourceMap": true, 
        "outDir": "./dist", 
        "rootDir": "./src", 
        "strict": false, 
        "moduleResolution": "node", 
        "esModuleInterop": true, 
        "experimentalDecorators": true, 
        "emitDecoratorMetadata": true, 
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true 
    }, 
    "exclude": ["dist", "node_modules", "tests"] 
}